<Window x:Class="MicrosEmiCRP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicrosEmiCRP"
        mc:Ignorable="d"
       Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>

        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="Pic">
            <Image  Source="AxonLab\Pics\product.png"></Image>
        </Grid>
        <Grid Grid.Column="1">
            <DockPanel>
                <TextBlock Name="TextBlockInfo" DockPanel.Dock="Top" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" FrameworkElement.HorizontalAlignment="Left" Margin="0 0 20 0">

                </TextBlock>
            </DockPanel>
        </Grid>

    </Grid>
</Window>
